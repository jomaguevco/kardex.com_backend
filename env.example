# Configuración de la Base de Datos
DB_HOST=localhost
DB_PORT=3306
DB_NAME=sistema_ventas_kardex
DB_USER=root
DB_PASSWORD=

# Configuración del Servidor
PORT=4000
NODE_ENV=development

# Configuración JWT
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_EXPIRES_IN=24h

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000

# Configuración de Rate Limiting (protección contra exceso de solicitudes)
# windowMs: Ventana de tiempo en milisegundos (900000 = 15 minutos)
# maxRequests: Número máximo de solicitudes permitidas por IP en esa ventana
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Configuración de Logs
LOG_LEVEL=info